{
  "name": "@iml/realtime",
  "version": "6.1.0",
  "description": "Realtime communications layer between IML GUI and API",
  "scripts": {
    "eslint": "eslint ./",
    "test": "jest -c ./jest.config.unit.js --silent",
    "integration": "jest -c ./jest.config.integration.js --silent",
    "cover": "jest --coverage -c ./jest.config.unit.js",
    "format": "prettier --write '**/*.js'"
  },
  "publishConfig": {
    "access": "public"
  },
  "pre-commit": [
    "eslint",
    "test"
  ],
  "files": [
    "*.js",
    "serialize-error",
    "socket-router"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/whamcloud/realtime.git"
  },
  "author": "IML Team",
  "license": "MIT",
  "dependencies": {
    "@iml/router": "^6.1.1",
    "highland": "3.0.0-beta.6",
    "intel-fp": "3.2.1",
    "intel-logger": "1.0.0",
    "intel-obj": "6.0.0",
    "intel-req": "1.0.9",
    "intel-through": "1.0.8",
    "json-mask": "0.3.8",
    "jsonschema": "1.1.1",
    "pg": "^7.4.3",
    "socket.io": "2.1.1",
    "uws": "10.148.0"
  },
  "devDependencies": {
    "@iml/stub-daddy": "2.0.5",
    "eslint": "5.5.0",
    "jest": "^23.6.0",
    "pre-commit": "1.2.2",
    "prettier": "^1.15.3",
    "socket.io-client": "2.1.1"
  }
}
