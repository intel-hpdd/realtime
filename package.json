{
  "name": "@iml/realtime",
  "version": "5.1.0",
  "main": "dist/bundle.js",
  "description": "Realtime communications layer between MFL GUI and API",
  "config": {
    "port": "8888",
    "manager_url": "https://localhost:443/"
  },
  "scripts": {
    "app": "node ./dist/bundle.js",
    "eslint": "eslint ./",
    "test": "jest",
    "cover": "NODE_ENV=test yarn test -- --coverage",
    "rollup": "rollup -c rollup-config.js",
    "postversion": "dotnet fable npm-run rollup"
  },
  "pre-commit": [
    "eslint",
    "flow",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:intel-hpdd/realtime.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "resetMocks": true,
    "resetModules": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@mfl)/"
    ]
  },
  "author": "MFL Team",
  "license": "MIT",
  "dependencies": {
    "@mfl/obj": "6.0.3",
    "@mfl/req": "3.0.4",
    "@mfl/router": "6.0.1",
    "highland": "3.0.0-beta.4",
    "socket.io": "2.0.1"
  },
  "devDependencies": {
    "@mfl/stub-daddy": "2.0.3",
    "babel-eslint": "7.2.3",
    "babel-preset-env": "1.4.0",
    "eslint": "3.19.0",
    "eslint-config-prettier": "2.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-prettier": "2.0.1",
    "fable-jest": "2.4.1",
    "fable-powerpack": "next",
    "jest": "20.0.1",
    "json-mask": "0.3.8",
    "pre-commit": "1.2.2",
    "prettier": "1.3.1",
    "rollup": "0.41.6",
    "rollup-plugin-bundle-size": "1.0.1",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-fable": "1.0.4",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-watch": "3.2.2",
    "socket.io": "2.0.1",
    "socket.io-client": "2.0.1"
  }
}
